#include <stdio.h>
#include <unistd.h>

void	ft_putchar(char c)
{
	write(1, &c, 1);
}

int		main(void)
{
	int i;

	for (i = 1; i < 11; i++)
	{
		sastantua(i);
	}
	return (0);
}

void	__print_line(int n, int blanc)
{
	if (blanc == 1)
	{
		while (n > 0)
		{
			ft_putchar(' ');
			n--;
		}
	}
	else
	{
		ft_putchar('/');
		while (n > 0)
		{
			ft_putchar('*');
			n--;
		}
		ft_putchar('\\');
		ft_putchar('\n');
	}
}



