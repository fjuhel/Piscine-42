int	door(int fb, int size, int etage, int line, int dec)
{
	if ((n + fb > dec - (size / 2)) && (n + fb <= 1 + dec + (size / 2)))
	{
		if ((fb == size / 2) && (n == dec - size / 2))
			ft_putchar('$');
		else
			ft_putchar('|');
		return (1);
	}
	return (0);
}




void	v1colle(int x, int y)
{
	int i;
	int j;

	i = 0;
	while (i < y)
	{
		j = 0;
		while (j < x)
		{
			if ((i == 0) && (j == 0))
				ft_putchar('/');
			else if ((i == y - 1) && (j == 0))
				ft_putchar('\\');
			else if ((i == 0) && (j == x - 1)) 
				ft_putchar('\\');
			else if ((i == y - 1) && (j == x - 1))
				ft_putchar('/');
			else if (((i == 0) || (i++ == y - 1)) || ((j == 0) || (j == x - 1)))
				ft_putchar('*');
			else
				ft_putchar(' ');
			j++;
		}
		ft_putchar('\n');
		i++;
	}
}


int		compute_cols(int etage, int line)
{
	if (line == 0)
		line = (etage * (5 + etage) / 2);
	if (etage < 4)
		return (4 * etage + 2 * line - 5);
	else
		return (6 * etage + 2 * line - 11);
}

